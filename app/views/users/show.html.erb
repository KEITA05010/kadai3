

<main>
  
        <div class="container px-5 px-sm-0">
  <div class="row">
      
    <div class="col-md-3">
      <h2>User info</h2>
      
      
            
     
  <tbody><tr> <%=image_tag @user.get_profile_image%></tr>
  
  <tr>
	  <th>name</th>
	  <th><%=@user.name%></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%=@user.introduction%></th>
  </tr>
</tbody></table>

<div class="row">
  <%= link_to edit_user_path(@user.id) do %>
    <div class="fas fa-user-cog"></div>
  <% end %>
</div>
  

  
<%= form_with model: Book.new do |f| %>  
  
      <h2 class="mt-3">New book</h2>
     
      
  <div class="form-group">
    <label for="book_title">Title</label>
     <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
   <%= f.text_area :body %>
    
  </div>
  
  <div class="form-group">
    <%= f.submit 'Create Book',class:"btn" %> 
  </div>

 
  
<% end %>
</div>
    
    
    
 <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      
      <th>Title</th>
      <th>Opinion</th>
      
    </tr>
  </thead>
  
  <tbody>
<%@books.each do |book| %>
      <tr>
        <td>
         <%= link_to image_tag(@user.get_profile_image), user_path(@user) %>
        </td>
        
        <td>
          <%=link_to book.title,book_path(book)%>
        </td>
        
        <td>
         <%=book.body%>
        </td>
        
      </tr>
      
<%end%>
  </tbody>
</table>
    </div>

    


      </main>